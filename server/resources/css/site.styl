*
  margin 0
  padding 0

#container
  display flex
  min-height 100vh
  flex-direction column

#content
  flex 1

#footer
  margin 20px auto 
  text-align center
  color #666

.title
  margin 10px
  text-align center
  color #666

#header ul
  width 50%
  margin 10px auto
  display flex
  list-style-type none
  justify-content space-around

#header ul a
  font-size 20

.row
  margin 0px

a
  text-decoration none
  color #337ab7

a:hover
  text-decoration none
  color #666

.error
  display bloc
  color #FF0000
  text-align center

.success
  display block
  color #00FF00
  text-align center
  margin-top 50px

.form-group.required label:after
  content "*"
  color #FF0000

.header p
  font-weight 900
  font-size 14px

.categories
  display flex
  list-style-type none
  justify-content space-around

.categories p
  flex 1
  text-align center
  border-top 1px solid #666
  border-left 1px solid #666
  color #666
  margin 0px

.categories p:last-child
  border-right 1px solid #666

.threads.last, .admins.last, .categories.last
  border-bottom 1px solid #666

div.create-thread, div.create-category
  display flex
  justify-content space-between
  margin-bottom 10

div.create-thread a, div.create-category a
  padding 5 10

p.center
    text-align center
    color #666
    font-size 18px

form
    margin-bottom 20

#header ul li:nth-last-child
  margin-left 100px

#header form
  display inline-block

span.username
  font-size 20
  color: #666
  margin-right 10px

#header input[type='submit']
  background none !important
  border none 
  padding 0px !important
  color #337ab7
  font-size 20
  cursor pointer

#header input[type='submit']:hover
  color #666

nav
  text-align center

.create-thread select, .create-category select
  width 70px

.header p:not(.actions)
  background-image url(../images/sort.gif)
  background-repeat: no-repeat
  background-position: center right
  cursor: pointer

.header p.asc
  background-image url(../images/asc.gif)

.header p.desc
  background-image url(../images/desc.gif)

.answer, .thread
  display: flex
  margin-top 20

.votes
  display flex
  flex-direction column
  width 50
  text-align center

.votes .up
  height 13
  width 20
  margin 5 auto
  background-image url(../images/up-arrow.png)

.votes .down
  height 13
  width 20
  margin 5 auto
  background-image url(../images/down-arrow.png)

.votes .up:hover, .votes .down:hover
  cursor pointer

#answers .answer .text, .thread .description
  flex: 1

.author
  text-align right
  margin-top 20

textarea
  resize none

p.details
  display flex
  justify-content space-between
  margin 30 auto

p.answered
  text-align right

.threads
  display flex
  flex-direction column

.threads .first
  text-align center
  border-top 1px solid #666
  color #666

.threads .first, .threads .second
  display flex

.threads .first .votes, .threads .first .answers, .threads .first .views
  display flex
  flex-direction column
  margin 10 10

.threads .first .title
  flex 1
  text-align left

.threads .second
  justify-content space-between

.threads .second .author
  width 180

.threads .second .category
  flex 1

.threads .second .category, .threads .second .asked, .threads .second .author 
  margin 10
  text-align left

.profile
  display flex
  justify-content space-between

.admins
  display flex
  justify-content space-between

.admin
  flex 1
  border-top 1px solid #666

span.actions
  display block
  text-align right

.actions .delete.admin
  padding-top 1

span.categoryName
  color #FF0000

.comment-form
  display none

span.comment
  display block
  border-top 1px solid #666

span.comment:last-child
  border-bottom 1px solid #666

p.no-threads, p.no-categories, p.no-answers
  text-align center
  font-size 20
  margin-top 20
  color #666

#answer-form
  margin-top 50

p.comments, p.add-comment
  margin-left 50